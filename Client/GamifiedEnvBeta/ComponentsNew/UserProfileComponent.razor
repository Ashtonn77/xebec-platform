@inject HttpClient httpClient
@inject State State

<style>
    .container {
        width: 90%;
        height: 90%;
        margin: auto;
        display: flex;
        justify-content: center;
        align-items: center;
        @*background-color:#b4c0d0;*@border-radius: 5px;

    }

    /*LEFT*/
    .left {
        width: 30%;
        height: 100%;
        margin: auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 5px 10px 8px #888888;
        overflow-y: auto;
    }


    .picture {
        width: 100%;
        height: 45%;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #6c85a3;
    }

    .description {
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #b4c0d0;
    }

    .image {
        width: 60%;
        height: 70%;
        margin: auto;
        @*background-color:pink;*@
    }

    .inner-desc {
        width: 90%;
        height: fit-content;
        margin: auto;
        padding: 10px;
        display: flex;
        flex-direction: column;
        @*background-color:pink;*@
    }

    .name {
        width: 100%;
        height: fit-content;
        padding: 10px;
        @*background-color:magenta;*@
    }

    .details {
        width: 100%;
        height: 90%;
        padding: 10px;
        font-size: 14px;
        @*background-color:lime;*@
    }

    /*RIGHT*/
    .right {
        width: 60%;
        height: 100%;
        margin: auto;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 5px 10px 8px #888888;
        overflow-y: auto;
    }


    .about {
        width: 100%;
        height: fit-content;
        padding: 10px;
        background-color: #b4c0d0;
    }

    .about-heading {
        height: 8%;
        width: 100%;
        padding: 10px;
        @*background-color:magenta;*@
    }


    .bottom-about {
        width: 100%;
        height: 92%;
        padding: 10px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        @*background-color:purple;*@
    }

    .right-about,
    .left-about {
        word-wrap: normal;

    }

    .right-about p,
    .left-about p {
        font-size: 14px;
    }

    .right-about span,
    .left-about span {
        font-size: 14px;
    }

    /*experience*/

    .experience {
        width: 100%;
        padding: 10px;
        height: 100%;
        display: flex;
        justify-content: space-evenly;
        align-items: center;
        background-color: #6c85a3;
        color: #fff;
    }

    .education {
        width: 49%;
        height: 100%;
        margin: auto;
        @*background-color:pink;*@
    }

    .experiencedetails {
        width: 49%;
        height: 100%;
        margin: auto;
        @*background-color:pink;*@
    }

    .header-exp {
        width: 100%;
        height: 10%;
        padding: 10px;
    }

    .bottom-exp {
        width: 100%;
        height: 90%;
        padding: 10px;
        font-size: 15px;
        @*background:orange;*@
    }



    /*scroll*/
    .left::-webkit-scrollbar,
    .right::-webkit-scrollbar {
        width: 12px;
    }

    .left::-webkit-scrollbar-track,
    .right::-webkit-scrollbar-track {
        background-color: #EAF2F8;
        border-top-right-radius: 5px;
        border-bottom-right-radius: 5px;
    }

    .left::-webkit-scrollbar-thumb,
    .right::-webkit-scrollbar-thumb {
        background-color: #95A5A6;
        border: 3px solid #EAF2F8;
        border-radius: 20px;
    }
</style>



<div class="container">

    <div class="left">

        <div class="picture">

            <div class="image">

                <img src="\img\profile.png" alt="profile" width="100%" height="100%" />

            </div>

        </div>

        <div class="description">

            <div class="inner-desc">

                <div class="name">

                    <h6>Jane Doe</h6>

                </div>

                <div class="details">

                    <p>
                        Owner at Her Company Inc. <br />
                        Lorem ipsum dolor sit amet consectetur adipisicing elit. Reprehenderit, eligendi dolorum sequi
                        illum qui unde aspernatur non deserunt.

                    </p>

                    <p>
                        Owner at Her Company Inc. <br />
                        Lorem ipsum dolor sit amet consectetur adipisicing elit. Reprehenderit, eligendi dolorum sequi
                        illum qui unde aspernatur non deserunt.

                    </p>


                </div>
            </div>

        </div>

    </div>

    <div class="right">

        <div class="about">

            <div class="about-heading">
                <h5>About</h5>
            </div>

            <div class="bottom-about">

                <div class="left-about">

                    <div class="about-details">

                        @if(Personal != null)
                        {
                            <p><strong>First Name:</strong> <span>@Personal.FirstName</span></p>
                            <p><strong>Gender:</strong> <span>@Personal.Gender</span></p>
                            <p><strong>Email:</strong> <span>@Personal.Email</span></p>
                        }

                    </div>


                </div>

                <div class="right-about">


                    <div class="about-details-right">

                         @if(Personal != null)
                        {
                            <p><strong>Last Name:</strong> <span>@Personal.LastName</span></p>
                            <p><strong>Contact Number:</strong> <span>@Personal.PhoneNumber</span></p>
                            <p><strong>Location:</strong> <span>@Personal.Address</span></p>
                        }


                    </div>


                </div>

            </div>

        </div>

        <div class="experience">


            <div class="experiencedetails">

                <div class=header-exp>
                    <h5>Experience</h5>
                </div>


                <div class="bottom-exp">


                        @if(WorkHistory != null)
                        {
                            <p><strong>Company Name </strong>: @WorkHistory.CompanyName</p>
                            <p><strong>Job Title </strong>: @WorkHistory.JobTitle</p>
                            <p><strong>Description </strong>: @WorkHistory.Description</p>
                            <p><strong>Start Date </strong>: @WorkHistory.StartDate</p>
                            <p><strong>End Date</strong>: @WorkHistory.EndDate</p>
                        }
                  

                </div>




            </div>

            <div class="education">

                <div class=header-exp>
                    <h5>Education</h5>
                </div>


                <div class="bottom-exp">


                     @if(Education != null)
                     {
                            <p><strong>Institution </strong>: @Education.Insitution</p>
                            <p><strong>Qualification </strong>: @Education.Qualification</p>
                            <p><strong>Start Date </strong>: @Education.StartDate</p>
                            <p><strong>End Date</strong>: @Education.EndDate</p>
                    }


                </div>



            </div>



        </div>


    </div>


</div>

<h1>@State.Id</h1>
@code
{
    PersonalTestInfo Personal;

    EducationTest Education;

    WorkHistoryTest WorkHistory;

    AdditionalInformationTest AdditionalInformationTest;

    protected override async Task OnInitializedAsync()
    {

        await httpClient.GetFromJsonAsync<PersonalTestInfo>($"/api/PersonalsTest/{State.Id}");
        await httpClient.GetFromJsonAsync<EducationTest>($"/api/EducationTest/{State.Id}");
        await httpClient.GetFromJsonAsync<WorkHistoryTest>($"/api/WorkHistoryTest/{State.Id}");
        await httpClient.GetFromJsonAsync<AdditionalInformationTest>($"/api/AdditionalInformationTest/{State.Id}");

    }

}