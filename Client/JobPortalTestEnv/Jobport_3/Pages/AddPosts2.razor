<div class="header">
    <h3 style="font-weight: bold; font-size:25px;">Post a Job</h3>
</div>
<form class="main-form">

    <div class="form-group top-div">
        <div class="form-group left-div">

            <div class="form-group-others">
                <input type="text" class="form-control form-control-style" placeholder="Job Title" @bind="job.Title">
            </div>

            <div class="form-group-others">
                <input type="text" class="form-control form-control-style" placeholder="Location" @bind="job.Location">
            </div>

            <div class="form-group-others">
                <input type="text" class="form-control form-control-style" placeholder="Compensation" @bind="job.Compensation">
            </div>
        </div>
        <div class="form-group right-div">

            <div class="form-group-others">
                <select class="custom-select right-input" id="inputGroupSelect01" @onchange="OnDepartmentChanged">
                    <option selected disabled>--Select Department--</option>
                    <option value="Accounting">Accounting</option>
                    <option value="Legal">Legal</option>
                    <option value="IT">IT</option>
                </select>
            </div>

            <div class="form-group-others">
                <select class="custom-select right-input jobTypeSelect2" id="jobType" multiple="multiple">
                    @foreach (var items in jobTypes)
                    {
                        <option value="@items.Id">@items.Type</option>
                    }
                </select>
            </div>

            <div class="form-group-others">
                <select class="custom-select right-input jobPlatformSelect2" id="jobPlatform" multiple="multiple">
                    @foreach (var items in jobPlatform)
                    {
                        <option value="@items.Id">@items.PlatformName</option>
                        @*<span>
                                @if (jobPlatform.Count > 4)
                                {<span>&nbsp;&nbsp;</span>}<input type="checkbox" value="@items.Id" @onchange="eventArgs => { CheckboxClicked(items.Id, eventArgs.Value); }">&nbsp;<span style="font-size:14px;">@items.PlatformName</span>
                            </span>*@
                    }
                </select>
            </div>
        </div>
    </div>

    <div class="form-group form-check-inline form-group-text-area">
        <textarea class="form-control input textarea" rows="5" @bind="job.Description" placeholder="Job Description" />
    </div><br />

    <div class="form-group add-button-div">
        <button type="button" style="width:150px" @onclick="SendData" class="btn btn-outline-info btn-sm">Add</button>
    </div><br />
</form>